<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/trailerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/trailer_elements_margin"
            android:layout_marginLeft="@dimen/trailer_elements_margin"
            android:layout_marginStart="@dimen/trailer_elements_margin"
            android:layout_marginTop="@dimen/trailer_elements_margin"
            android:contentDescription="@string/trailer_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/trailerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/trailer_elements_margin"
            android:layout_marginEnd="@dimen/trailer_elements_margin"
            android:layout_marginStart="@dimen/trailer_elements_margin"
            android:layout_marginTop="@dimen/trailer_elements_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/trailerButton"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Trailer title" />
    </android.support.constraint.ConstraintLayout>
</layout>